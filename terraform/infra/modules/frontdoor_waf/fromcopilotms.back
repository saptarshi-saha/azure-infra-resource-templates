provider "azurerm" {
  features {}
}

resource "azurerm_resource_group" "example" {
  name     = "example-resources"
  location = "East US"
}

resource "azurerm_app_service_plan" "example" {
  name                = "example-app-service-plan"
  location            = azurerm_resource_group.example.location
  resource_group_name = azurerm_resource_group.example.name
  sku {
    tier = "Standard"
    size = "S1"
  }
}

resource "azurerm_app_service" "example" {
  name                = "example-app-service"
  location            = azurerm_resource_group.example.location
  resource_group_name = azurerm_resource_group.example.name
  app_service_plan_id = azurerm_app_service_plan.example.id
}

resource "azurerm_cdn_frontdoor_profile" "example" {
  name                = "example-frontdoor"
  resource_group_name = azurerm_resource_group.example.name
  sku_name            = "Standard_AzureFrontDoor"
}

resource "azurerm_cdn_frontdoor_origin" "example" {
  name                           = "example-origin"
  cdn_frontdoor_origin_group_id  = azurerm_cdn_frontdoor_profile.example.id
  host_name                      = azurerm_app_service.example.default_site_hostname
  certificate_name_check_enabled = true
}

resource "azurerm_cdn_frontdoor_custom_domain" "example" {
  name                        = "example-custom-domain"
  cdn_frontdoor_profile_id    = azurerm_cdn_frontdoor_profile.example.id
  host_name                   = "www.example.com"

  tls {
    certificate_type = "ManagedCertificate"
  }
}

resource "azurerm_cdn_frontdoor_firewall_policy" "example" {
  name                = "examplewafpolicy"
  resource_group_name = azurerm_resource_group.example.name
  sku_name            = "Standard_AzureFrontDoor"
  mode                = "Prevention"

  custom_rule {
    name     = "example-custom-rule"
    action   = "Block"
    priority = 1
    type     = "MatchRule"

    match_condition {
      match_variable = "RequestMethod"
      match_values   = ["POST"]
      operator       = "Equal"
    }
  }
}
